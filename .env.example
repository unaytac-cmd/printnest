# PrintNest Environment Variables
# Copy this file to .env and fill in the values
# IMPORTANT: All values marked [REQUIRED] must be set in production

# ==================
# Environment
# ==================
KTOR_ENV=development  # Set to "production" in production

# ==================
# Database
# ==================
DB_HOST=localhost
DB_PORT=5433
DB_NAME=printnest
DB_USER=postgres
DB_PASSWORD=postgres  # [REQUIRED] Change in production

# ==================
# Redis
# ==================
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=  # [REQUIRED] Set in production

# ==================
# JWT Configuration [REQUIRED in production]
# ==================
JWT_SECRET=  # [REQUIRED] Generate with: openssl rand -base64 32
JWT_ISSUER=printnest
JWT_AUDIENCE=printnest-users
SESSION_SECRET=  # [REQUIRED] Generate with: openssl rand -base64 32

# ==================
# AWS Configuration
# ==================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=printnest-uploads

# ==================
# Stripe
# ==================
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# ==================
# Docker Registry (Production)
# ==================
DOCKER_REGISTRY=ghcr.io/your-username
VERSION=latest

# ==================
# Environment
# ==================
KTOR_ENV=development
VITE_API_URL=http://localhost:8080
VITE_APP_ENV=development
